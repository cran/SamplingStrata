citHeader("To cite SamplingStrata in publications use:")

citEntry(entry = "Article",
  title        = "{SamplingStrata}: An {R} Package for the Optimization of Stratified Sampling",
  author       = personList(as.person("Giulio Barcaroli")),
  journal      = "Journal of Statistical Software",
  year         = "2014",
  volume       = "61",
  number       = "4",
  pages        = "1--24",
  url          = "http://www.jstatsoft.org/v61/i04/",

  textVersion  =
  paste("Giulio Barcaroli (2014).",
        "SamplingStrata: An R Package for the Optimization of Stratified Sampling.",
        "Journal of Statistical Software, 61(4), 1-24.",
        "URL http://www.jstatsoft.org/v61/i04/.")
)

